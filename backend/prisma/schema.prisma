// Prisma schema for pet super-app MVP
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  tutor
  prestador
  lojista
  admin
}

enum PartnerType {
  lojista
  prestador
}

enum PartnerStatus {
  pending
  approved
  rejected
}

enum ProductStatus {
  new
  preparing
  shipped
  delivered
  cancelled
}

enum ServiceStatus {
  requested
  accepted
  completed
  cancelled
}

enum PaymentMethod {
  pix
  card
}

enum PaymentStatus {
  pending
  paid
  failed
}

enum OrderStatus {
  new
  preparing
  shipped
  delivered
  cancelled
}

enum AppointmentStatus {
  requested
  accepted
  completed
  cancelled
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  phone        String?
  passwordHash String
  role         Role      @default(tutor)
  addresses    Address[]
  pets         Pet[]     @relation("TutorPets")
  partner      Partner?
  reviews      Review[]  @relation("AuthorReviews")
  orders       Order[]   @relation("TutorOrders")
  appointments Appointment[] @relation("TutorAppointments")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Address {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  cep          String
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  latitude     Float?
  longitude    Float?
  partner      Partner?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Pet {
  id        Int      @id @default(autoincrement())
  tutor     User     @relation("TutorPets", fields: [tutorId], references: [id])
  tutorId   Int
  name      String
  species   String
  breed     String?
  size      String
  age       Int?
  notes     String?
  appointments Appointment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partner {
  id              Int            @id @default(autoincrement())
  user            User           @relation(fields: [userId], references: [id])
  userId          Int
  type            PartnerType
  fantasyName     String
  document        String
  description     String?
  address         Address        @relation(fields: [addressId], references: [id])
  addressId       Int
  serviceRadiusKm Float?
  status          PartnerStatus  @default(pending)
  products        Product[]
  services        Service[]
  orders          Order[]        @relation("PartnerOrders")
  appointments    Appointment[]  @relation("PartnerAppointments")
  reviews         Review[]       @relation("PartnerReviews")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  partner     Partner  @relation(fields: [partnerId], references: [id])
  partnerId   Int
  name        String
  description String?
  category    String?
  price       Float
  stock       Int      @default(0)
  isActive    Boolean  @default(true)
  imageUrl    String?
  orderItems  OrderItem[]
  reviews     Review[]  @relation("ProductReviews")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id          Int      @id @default(autoincrement())
  partner     Partner  @relation(fields: [partnerId], references: [id])
  partnerId   Int
  type        String
  name        String
  description String?
  basePrice   Float
  unit        String
  petSize     String
  isActive    Boolean  @default(true)
  appointments Appointment[]
  reviews     Review[] @relation("ServiceReviews")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            Int          @id @default(autoincrement())
  tutor         User         @relation("TutorOrders", fields: [tutorId], references: [id])
  tutorId       Int
  partner       Partner      @relation("PartnerOrders", fields: [partnerId], references: [id])
  partnerId     Int
  address       Address      @relation(fields: [addressId], references: [id])
  addressId     Int
  status        OrderStatus  @default(new)
  totalAmount   Float
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(pending)
  items         OrderItem[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OrderItem {
  id         Int     @id @default(autoincrement())
  order      Order   @relation(fields: [orderId], references: [id])
  orderId    Int
  product    Product @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int
  unitPrice  Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Appointment {
  id            Int      @id @default(autoincrement())
  tutor         User     @relation("TutorAppointments", fields: [tutorId], references: [id])
  tutorId       Int
  pet           Pet      @relation(fields: [petId], references: [id])
  petId         Int
  partner       Partner  @relation("PartnerAppointments", fields: [partnerId], references: [id])
  partnerId     Int
  service       Service  @relation(fields: [serviceId], references: [id])
  serviceId     Int
  startDateTime DateTime
  endDateTime   DateTime
  status        AppointmentStatus @default(requested)
  amount        Float
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(pending)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Review {
  id         Int     @id @default(autoincrement())
  author     User    @relation("AuthorReviews", fields: [authorId], references: [id])
  authorId   Int
  targetType String
  targetId   Int
  rating     Int
  comment    String?
  product    Product? @relation("ProductReviews", fields: [productId], references: [id])
  productId  Int?
  service    Service? @relation("ServiceReviews", fields: [serviceId], references: [id])
  serviceId  Int?
  partner    Partner? @relation("PartnerReviews", fields: [partnerId], references: [id])
  partnerId  Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String
  value String
}
